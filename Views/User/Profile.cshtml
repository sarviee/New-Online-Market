@model OnlineMarket.Models.ProfileViewModel;

<div class="container">
    <form asp-action="Profile" method="post" class="mt-5">
        <h2>Profil ma'lumotlarini tahrirlash</h2>
        
        <div asp-validation-summary="All" class="text-danger"></div>
        <div class="form-group">
            <label asp-for="FirstName">Ismingiz</label>
            <input class="form-control" r asp-for="FirstName" />
            <span asp-validation-for="FirstName" class="text-danger"class="form-control"></span>
        </div>
        <div class="form-group">
            <label asp-for="LastName">Familiyangiz</label>
            <input class="form-control" r asp-for="LastName" />
            <span asp-validation-for="LastName" class="text-danger"class="form-control"></span>

        </div>
        <div class="form-group">
            <label asp-for="DateOfBirth">Tug'ilgan sanangiz</label>
            <input class="form-control" r asp-for="DateOfBirth" type="date" />
            <span asp-validation-for="DateOfBirth" class="text-danger"class="form-control"></span>

        </div>
        <div class="form-group">
            <label asp-for="Email">Email</label>
            <input class="form-control" r asp-for="Email" />
            <span asp-validation-for="Email" class="text-danger"class="form-control"></span>

        </div>
        
        <button type="submit" class="btn btn-primary mt-2">Tahrirlash</button> 
        <a href="/" class="btn btn-warning mt-2">Bekor qilish</a> 
    </form>

    
</div>

@await Html.PartialAsync("_ValidationScriptsPartial")