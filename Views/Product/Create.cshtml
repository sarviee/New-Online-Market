@model ProductViewModel

<form asp-action="Create" enctype="multipart/form-data">
    <h2>Maxsulot qo'shish</h2>
    <div asp-validation-summary="All" class="text-danger"></div>

    <div class="form-group">
        <label class="mt-3" asp-for="Name">Nomi</label>
        <input class="form-control" type="text" asp-for="Name" />
        <span asp-validation-for="Name" class="text-danger"class="form-control"></span>
    </div>
    <div class="form-group">
        <label class="mt-3" asp-for="Description">Tasnifi</label>
        <textarea class="form-control" asp-for="Description"></textarea>
        <span asp-validation-for="Description" class="text-danger"class="form-control"></span>
        
    </div>
    <div class="form-group">
        <label class="mt-3" asp-for="Price">Narxi</label>
        <input class="form-control" type="number" asp-for="Price" step="0.01" />
        <span asp-validation-for="Price" class="text-danger"class="form-control"></span>
        
    </div>
    <div class="form-group">
        <label class="mt-3" asp-for="Stock">Soni</label>
        <input class="form-control" type="number" asp-for="Stock" />
        <span asp-validation-for="Stock" class="text-danger"class="form-control"></span>

    </div>
    <div class="form-group">
        <label class="mt-3" asp-for="CategoryId">Kategoriya</label>
        <select class="form-control" asp-for="CategoryId" asp-items="@(new SelectList(Model.Categories, "Id", "Name"))"></select>
        <span asp-validation-for="CategoryId" class="text-danger"class="form-control"></span>

    </div>
    <div class="form-group">
        <label class="mt-3" asp-for="ImageFile">Rasm</label>
        <input required class="form-control" type="file" asp-for="ImageFile" />
        <span asp-validation-for="ImageFile" class="text-danger"class="form-control"></span>

    </div>
    <button class="btn btn-primary mt-3" type="submit">Saqlash</button>
    <a asp-action="Index" class="btn btn-warning mt-3">Bekor qilish</a>
</form>
